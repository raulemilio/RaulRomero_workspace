#include "main.h"
#include <stdbool.h>

typedef enum{
	   BUTTON_UP,
	   BUTTON_FALLING,
	   BUTTON_DOWN,
	   BUTTON_RAISING,
  } debounceState_t;

typedef bool bool_t;

typedef uint32_t tick_t;

void debounceFSM_init(debounceState_t *debounce_state,delay_t * debounceDelay,tick_t *DEBOUNCE_TIME);		// Se carga el estado inicial de la FSM
void debounceFSM_update(debounceState_t *debounce_state,delay_t * debounceDelay);	// Actualizaci√≥n de la FSM
void buttonPressed(void);			// Invierte el estado del LED2
void buttonReleased(void);		// Invierte el estado del LED1
bool_t readKey( debounceState_t * stateFSM );
